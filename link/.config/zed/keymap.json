[
  {
    "context": "Editor",
    "bindings": {
      "cmd-shift-l": "editor::SplitSelectionIntoLines"
    }
  },
  {
    "bindings": { "cmd-/": "editor::ToggleComments" }
  },
  {
    "context": "Workspace",
    "bindings": {
      "cmd-}": "terminal_panel::ToggleFocus",
      "cmd-ctrl-a": "assistant::ToggleFocus"
    }
  },
  {
    "context": "Workspace",
    "bindings": {
      "ctrl-r g": [
        "task::Spawn",
        {
          "task_name": "Lazygit"
        }
      ]
    }
  },
  {
    "context": "Workspace",
    "bindings": {
      "ctrl-r s": [
        "task::Spawn",
        {
          "task_name": "Start"
        }
      ]
    }
  },
  {
    "context": "Workspace",
    "bindings": {
      "ctrl-r u": [
        "task::Spawn",
        {
          "task_name": "Update"
        }
      ]
    }
  }
]
