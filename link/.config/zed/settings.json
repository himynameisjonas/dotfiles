  "base_keymap": "Atom",
  "theme": "Catppuccin Latte",
  "buffer_font_family": "Operator Mono Lig",
  "buffer_font_size": 18,
  "buffer_line_height": "comfortable",
  "ui_font_family": "Operator Mono Lig",
  "ui_font_size": 17,
  "ui_font_weight": 200,

  "collaboration_panel": {
    "button": false
  },

  "notification_panel": {
    "button": false
  },

  "agent": {
    "inline_assistant_model": {
      "provider": "zed.dev",
      "model": "claude-sonnet-4-latest"
    },
    "profiles": {
      "ask,-no-code": {
        "name": "Ask, no code",
        "tools": {
          "contents": false,
          "diagnostics": false,
          "fetch": true,
          "list_directory": false,
          "now": true,
          "find_path": false,
          "read_file": true,
          "grep": false,
          "thinking": true,
          "web_search": true
        },
        "enable_all_context_servers": false,
        "context_servers": {}
      }
    },
    "default_profile": "write",
    "always_allow_tool_actions": true,
    "default_model": {
      "provider": "copilot_chat",
      "model": "claude-3.7-sonnet"
    },
    "inline_alternatives": [
      {
        "provider": "copilot_chat",
        "model": "gpt-4o"
      }
    ],
    "version": "2",
    "enabled": true
  },

  "tab_bar": {
    "show_nav_history_buttons": false
  },

  "tabs": {
    "git_status": true
  },

  "git_panel": {
    "sort_by_path": true
  },

  "telemetry": {
    "metrics": false
  },

  "terminal": {
    "env": {
      "GIT_EDITOR": "zed --wait"
    },
    "option_as_meta": false,
    "detect_venv": {
      "on": {
        "directories": ["env", ".venv", "venv"]
      }
    }
  },

  "languages": {
    "Ruby": {
      "language_servers": ["ruby-lsp", "standardrb", "!solargraph", "!rubocop"],
      "formatter": "language_server"
    },
    "Handlebars": {
      "ensure_final_newline_on_save": false,
      "prettier": {
        "allowed": true
      }
    },
    "Terraform": {
      "formatter": {
        "external": {
          "command": "tofu",
          "arguments": ["fmt", "-"]
        }
      }
    },
    "Terraform Vars": {
      "formatter": {
        "external": {
          "command": "tofu",
          "arguments": ["fmt", "-"]
        }
      }
    }
  },

  "lsp": {
    "ruby-lsp": {
      "initialization_options": {
        "enabledFeatures": {
          "diagnostics": true,
          "formatting": true
        },
        "formatter": "standard"
      }
    },
    "tailwindcss-language-server": {
      "settings": {
        "includeLanguages": {
          "erb": "html",
          "ruby": "html"
        },
        "experimental": {
          "classRegex": ["\\bclass:\\s*['\"]([^'\"]*)['\"]"]
        }
      }
    }
  }
}
