// Zed settings
//
// For information on how to configure Zed, see the Zed
// documentation: https://zed.dev/docs/configuring-zed
//
// To see all of Zed's default settings without changing your
// custom settings, run the `open default settings` command
// from the command palette or from `Zed` application menu.
{
  "ssh_connections": [
    {
      "host": "allthingsmini.local",
      "username": "jonas",
      "projects": [
        {
          "paths": ["~/minecraft"]
        },
        {
          "paths": ["~/plexbox"]
        },
        {
          "paths": ["~/plexbox/arr"]
        }
      ]
    }
  ],
  "base_keymap": "Atom",
  "theme": "Catppuccin Latte",
  "buffer_font_family": "Operator Mono Lig",
  "buffer_font_size": 18,
  "buffer_line_height": "comfortable",
  "ui_font_family": "Operator Mono Lig",
  "ui_font_size": 17,
  "ui_font_weight": 200,

  "collaboration_panel": {
    "button": false
  },

  "chat_panel": {
    "button": false
  },

  "notification_panel": {
    "button": false
  },

  "assistant": {
    "default_model": {
      "provider": "zed.dev",
      "model": "claude-3-5-sonnet-latest"
    },
    "inline_alternatives": [
      {
        "provider": "zed.dev",
        "model": "gpt-4o"
      }
    ],
    "version": "2",
    "enabled": true
  },

  "tab_bar": {
    "show_nav_history_buttons": false
  },

  "tabs": {
    "git_status": true
  },

  "telemetry": {
    "metrics": false
  },

  "terminal": {
    "env": {
      "GIT_EDITOR": "zed --wait"
    },
    "option_as_meta": false,
    "detect_venv": {
      "on": {
        "directories": ["env", ".venv", "venv"]
      }
    }
  },

  "languages": {
    "Ruby": {
      "language_servers": ["ruby-lsp", "standardrb", "!solargraph", "!rubocop"],
      "formatter": "language_server"
    },
    "Handlebars": {
      "ensure_final_newline_on_save": false,
      "prettier": {
        "allowed": true
      }
    },
    "Terraform": {
      "formatter": {
        "external": {
          "command": "tofu",
          "arguments": ["fmt", "-"]
        }
      }
    }
  },

  "lsp": {
    "ruby-lsp": {
      "initialization_options": {
        "enabledFeatures": {
          "diagnostics": true,
          "formatting": true
        },
        "formatter": "standard"
      }
    },
    "tailwindcss-language-server": {
      "settings": {
        "includeLanguages": {
          "erb": "html",
          "ruby": "html"
        },
        "experimental": {
          "classRegex": ["\\bclass:\\s*['\"]([^'\"]*)['\"]"]
        }
      }
    }
  }
}
